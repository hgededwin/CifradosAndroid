<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:id="@+id/lyout"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Texto:" />

            <EditText
                android:id="@+id/txtTexto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:hint="Ingresa el texto aquí"
                android:layout_marginTop="20dp"
                android:inputType="text"
                android:singleLine="true" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Clave:" />

            <EditText
                android:id="@+id/txtClave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:hint="Ingresa la clave aquí"
                android:layout_marginTop="15dp"
                android:inputType="text"
                android:singleLine="true"
                android:ems="10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal" >

            <RadioGroup
                android:id="@+id/rdgGrupo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_btngroup"
                android:orientation="horizontal" >


                    <RadioButton
                        android:id="@+id/rbCesar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:text="cesar" />

                    <RadioButton
                        android:id="@+id/rbplayfair"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:text="playfair" />

                    <RadioButton
                        android:id="@+id/rbVigenere"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="#FFF"
                        
                        android:text="vigenere" />
<!--                 </LinearLayout> -->

                    <RadioButton
                        android:id="@+id/rbVernam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="vernam"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:textSize="15sp" />

            </RadioGroup>
        </LinearLayout>




    </LinearLayout>

    <EditText
        android:id="@+id/txtResultado"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_edtxt"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:ems="10" />

    <Button
        android:id="@+id/btnCifrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/txtResultado"
        android:layout_alignRight="@+id/txtResultado"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rounded_btn"
        android:layout_below="@+id/lyout"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Cifrar" />

    <Button
        android:id="@+id/btnDescifrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnCifrar"
        android:layout_alignRight="@+id/txtResultado"
        android:layout_below="@+id/btnCifrar"
        android:background="@drawable/rounded_btn"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Descifrar" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtResultado"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Resultado:" />

</RelativeLayout>